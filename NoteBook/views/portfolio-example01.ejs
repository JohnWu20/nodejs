<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="A portfolio template that uses Material Design Lite.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>Blog example</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.grey-pink.min.css" />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>

<body>
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header mdl-layout__header--waterfall portfolio-header">
			       <div class="mdl-layout__header-row portfolio-logo-row">
                <span class="mdl-layout__title">
                    <div class="portfolio-logo"></div>
                    <span class="mdl-layout__title">The private place for your everday thoughts.</span>
                </span>
            </div>
            <!-- HomePage / community /-->
            <div class="mdl-layout__header-row portfolio-navigation-row mdl-layout--large-screen-only">
                <nav class="mdl-navigation mdl-typography--body-1-force-preferred-font">
                    <a class="mdl-navigation__link" href="home">HomePage</a>
                    <a class="mdl-navigation__link is-active" href="community">Community</a>
                    <a class="mdl-navigation__link" href="about">About</a>
                    <a class="mdl-navigation__link" href="contact">Contact</a>
                </nav>
            </div> 
		    </header>

			<div class="mdl-layout__drawer mdl-layout--small-screen-only">
				<nav class="mdl-navigation mdl-typography--body-1-force-preferred-font">
					<a class="mdl-navigation__link" href="home">HomePage</a>
					<a class="mdl-navigation__link  is-active" href="community">Community</a>
					<a class="mdl-navigation__link" href="about">About</a>
					<a class="mdl-navigation__link" href="contact">Contact</a>
				</nav>
			</div>

		<main class="mdl-layout__content">
			<div class="mdl-grid portfolio-max-width portfolio-contact">
			<div class="mdl-cell mdl-card mdl-cell--12-col mdl-shadow--4dp ">
			<div class = "ui main text container segment">
				<!-- <div class = "ui huge header">
					<%= blog.title%>
				</div> -->
				<div class="mdl-card__title">
                    <h2 class="mdl-card__title-text"><%= blog.title%></h2>
                </div>
					<div calss = "ui top attached segment">
						<div calss = "item">
							<img class = "ui centered rounded image" src = "<%=blog.content %>">
							<div class = "mdl-card__supporting-text">
								<span><%= blog.created.toDateString().substring(0,15)%></span>
							</div>
							<div class="mdl-card__supporting-text">
                            This part is for journal content.
							Not able to display now.
                    		</div>
							<div class = "description">
								<p>
									<%= blog.content %>
								</p>
							</div>
							<table><tr>	
							<td>
							<button class ="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" href = "/public/<%= blog._id%>/edit">Eidt</button> 
							</td>
							
							<td>
                                <div style="white-space:pre">             </div>
                            </td>
								
							<td>	
							<form id = "delete" action = "/public/<%=blog._id%>?_method=DELETE" method = "POST">
							<button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
									Delete
							</button>
							</form>
							</td>	
							</tr></table>		
						</div>		
					</div>
            </div>
			</div>
			</div>
		</main>	
	</div>
    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
</body>

</html>
